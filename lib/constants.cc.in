#include "verilog/constants.h"
#include <gnuradio/prefs.h>

namespace gr {
  namespace verilog {
    const std::string
    datadir() {
      return "@GR_PKG_DATA_DIR@";
    }

    std::string
    templatedir() {
      
      return gr::prefs().get_string("verilog",
                                    "templatedir",
                                    datadir());
      
    }
  }
} //namespace gr::verilog
